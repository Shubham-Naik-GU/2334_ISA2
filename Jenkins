pipeline {
    agent any  // Use any available agent

    stages {
        stage('Clone GitHub Repository') {
            steps {
                script {
                    // Clone the GitHub repository
                    git 'https://github.com/Shubham-Naik-GU/2334_ISA2.git'
                }
            }
        }
        stage('Build Docker Image') {
            steps {
                script {
                    // Build the Docker image from the Dockerfile in the cloned repository
                    bat "docker build -t shubham7211/dock ."
                }
            }
        }
        stage('Delete Existing Container') {
            steps {
                script {
                    // Remove any existing container named '2334' to avoid conflicts
                    bat "docker rm -f 2334 || exit 0"
                }
            }
        }
        stage('Create and Run Docker Container') {
            steps {
                script {
                    // Run the Docker container in detached mode
                    bat "docker run -d --name 2334 shubham7211/dock"
                }
            }
        }
    }
}
